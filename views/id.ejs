<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YOUR ID</title>
    <link rel="stylesheet" href="/ID/style.css" />
  </head>
  <body>
    <div id="container">
      <p style="color: red"><%= flash %></p>
      <h1>Login</h1>
      <form action="/signin" method="post">
        <input type="email" name="email" placeholder="Email" required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <button type="submit">Login</button>
      </form>
      <p class="switch">
        Don't have an account?
        <span href="" onclick="toggleForm()">Sign Up</span>
      </p>
    </div>

    <div id="container" style="display: none">
      <p id="error" style="color: red"></p>
      <h1>Sign Up</h1>
      <form
        method="post"
        action="/signup"
        onsubmit="onSumbit(event)"
        id="signupForm"
      >
        <input type="text" name="fullname" placeholder="FullName" required />
        <input type="text" name="username" placeholder="Username" required />
        <input type="email" name="email" placeholder="Email Address" required />
        <input type="tel" name="number" placeholder="Phone Number" required />
        <% if(ref) { %>
        <input
          id="ref"
          value="<%=ref%>"
          readonly
          name="ref"
          type="text"
          placeholder="Referral Code (optional)"
        />
        <% }%> <% if(!ref) { %>
        <input
          id="ref"
          value=""
          name="ref"
          type="text"
          placeholder="Referral Code (optional)"
        />
        <% } %>
        <input
          id="password"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <input
          id="re-password"
          type="password"
          placeholder="Password Confirmation"
          required
        />
        <button type="submit" id="payment">Continue</button>
      </form>
      <p class="switch">
        Already have an account? <span onclick="toggleForm()">Login</span>
      </p>
    </div>
    <script>
      function onSumbit(event) {
        const error = document.querySelector("#error");
        const pass = document.querySelector("#password");
        const repass = document.querySelector("#re-password");
        if (pass.value != repass.value) {
          event.preventDefault();
          error.innerText = "Passwords do not match!";
        }
      }
    </script>
    <script src="/ID/app.js"></script>
  </body>
</html>
